<%- include('../partials/header') %>
<main class="homescreen">
<div class="formpage">
    <form action="/meals/<%=id%>?_method=PUT" method="POST" class="formdisplay">
        <label>Breakfast:</label>
        <input name="breakfast" value="<%=entry.breakfast %>">
        <label>Lunch:</label>
        <input name="lunch" value="<%=entry.lunch%>">
        <label>Dinner:</label>
        <input name="dinner" value="<%=entry.dinner%>">
        <label>Other:</label>
        <input name="other" value="<%=entry.other%>">        
        <label>Date:</label>
        <input name="date" value="<%=entry.date%>" type="date" required>
        <input type="submit" value="save changes">
    </form>
</div>
</main>
</body>
</html>